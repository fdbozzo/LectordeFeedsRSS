<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <data>

    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/fragmentContainerView"
                    android:name="androidx.navigation.fragment.NavHostFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:defaultNavHost="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:navGraph="@navigation/nav_graph" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <!-- com.google.android.material.navigation.NavigationView
            android:id="@+id/navView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/drawer_header"
            app:menu="@menu/navdrawer_menu">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ejemplo"/>
        </com.google.android.material.navigation.NavigationView-->

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <!-- include layout="@layout/drawer_header"
                    android:id="@+id/navigation_header_container"/ -->

                <!-- app:layout_constraintTop_toBottomOf="@id/navigation_header_container" -->
                <!-- app:layout_constraintTop_toTopOf="parent" -->

                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img_feed_contents"
                            android:layout_width="@dimen/menu_icon_width"
                            android:layout_height="@dimen/menu_icon_width"
                            android:layout_marginEnd="@dimen/default_margin"
                            android:adjustViewBounds="false"
                            android:contentDescription="@string/content_picture"
                            android:cropToPadding="false"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_dashboard_black_24dp"
                            android:layout_margin="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/nav_feed_contents"
                            app:layout_constraintStart_toEndOf="@id/img_feed_contents"
                            app:layout_constraintTop_toTopOf="@id/img_feed_contents"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:text="Feed Contents"/>

                        <ImageView
                            android:id="@+id/img_settings"
                            android:layout_width="@dimen/menu_icon_width"
                            android:layout_height="@dimen/menu_icon_width"
                            android:layout_marginEnd="@dimen/default_margin"
                            android:adjustViewBounds="false"
                            android:contentDescription="@string/content_picture"
                            android:cropToPadding="false"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_dashboard_black_24dp"
                            android:layout_margin="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/img_feed_contents"/>

                        <TextView
                            android:id="@+id/nav_settings"
                            app:layout_constraintStart_toEndOf="@id/img_settings"
                            app:layout_constraintTop_toTopOf="@id/img_settings"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:text="Settings"/>

                        <ImageView
                            android:id="@+id/img_logout"
                            android:layout_width="@dimen/menu_icon_width"
                            android:layout_height="@dimen/menu_icon_width"
                            android:layout_marginEnd="@dimen/default_margin"
                            android:adjustViewBounds="false"
                            android:contentDescription="@string/content_picture"
                            android:cropToPadding="false"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_dashboard_black_24dp"
                            android:layout_margin="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/img_settings"/>

                        <TextView
                            android:id="@+id/nav_logout"
                            app:layout_constraintStart_toEndOf="@id/img_logout"
                            app:layout_constraintTop_toTopOf="@id/img_logout"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:text="Logout"/>

                        <com.blogspot.fdbozzo.lectorfeedsrss.ui.drawer.NonScrollingExpandableListView
                            android:id="@+id/expandableListView"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/img_logout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:dividerHeight="0.5dp">

                        </com.blogspot.fdbozzo.lectorfeedsrss.ui.drawer.NonScrollingExpandableListView>

                        <TextView
                            android:id="@+id/txt1"
                            app:layout_constraintStart_toEndOf="@id/img_logout"
                            app:layout_constraintTop_toBottomOf="@+id/expandableListView"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:text="Logout"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </ScrollView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.navigation.NavigationView>

    </androidx.drawerlayout.widget.DrawerLayout>

</layout>